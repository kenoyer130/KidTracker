<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<Button android:id="@+id/btnBack" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Back" />

	<TextView android:id="@+id/lblTitle" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="New Child" />

	<TextView android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:text="Name" />

	<EditText android:id="@+id/txtName" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:inputType="text"
		android:hint="Required"></EditText>

	<Button android:id="@+id/btnSave" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Save" />

	<Button android:id="@+id/btnCancel" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Cancel" />

</LinearLayout>