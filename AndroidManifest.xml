<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.jkenoyer.kidtracker" android:versionCode="1"
	android:versionName="1.0">
	<uses-sdk android:minSdkVersion="13" />

	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name="com.jkenoyer.kidtracker.activity.main.MainActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>		

		<activity android:name="com.jkenoyer.kidtracker.activity.children.ChildrenManageActivity"
			android:label="Manage children" />
		
		<activity android:name="com.jkenoyer.kidtracker.activity.children.ChildrenListActivity"
			android:label="Select a child" />
		
		<activity android:name="com.jkenoyer.kidtracker.activity.children.ChildrenNewActivity"
			android:label="Add new child" />

	</application>
</manifest>